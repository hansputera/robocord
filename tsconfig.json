{
    "compilerOptions": {
        "allowJs": true,
        "esModuleInterop": true,
        "module": "CommonJS",
        "target": "ES2016",
        "skipLibCheck": true,
        "lib": ["ES2015"],
        "allowSyntheticDefaultImports": true,
        "outDir": "./dist",
        "moduleResolution": "Node",
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}